<% provide(:title, @board.title) %>
<%= link_to "All boards", boards_path %> / <%= @board.title %>

<h1 id="page_title"><%= @board.title %></h1>
<p id="notice"><%= notice %></p>

<div>
  <% if current_user != nil %>
		<%= link_to 'Create Post', new_board_post_path(@board), class: "btn btn-primary" %>
	<% end %>
  <ol class="posts">
    <%= render @posts %>
    <%= will_paginate @posts %>
  </ol>
  <% if current_user != nil %>
		<%= link_to 'Create Post', new_board_post_path(@board), class: "btn btn-primary" %>
	<% end %>
</div>